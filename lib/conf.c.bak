struct conf conf;
	
int
read_conf()
{
	FILE *fp;
	char buf[4096], *p;
	char *kname, *kval;
	int len;

	
	if ((fp = fopen("/apps/bbs/" BBS_CONF, "r")) == NULL)
	{
		fprintf(stderr, "cannot open %s\r\n", BBS_CONF);
		exit(1);
	}

	while (fgets(buf, sizeof(buf), fp))
	{
		if ((p = strchr(buf, '#')) != NULL)
			*p = '\0';
		if ((p = strchr(buf, '\n')) != NULL)
			*p = '\0';
		if (buf[0] == '\0')
			continue;
		
		if ((p = strchr(buf, '=')) == NULL)
			continue;
			
		len = strlen(buf);
		*p = '\0';
		
		kname = p;
		while ((kname - 1) > buf && *(kname-1) == ' ')
			kname--;
		*kname = '\0';
		kname = buf;
		while (*kname == ' ')
			kname++;	
		
		kval = buf + len;
		while ((kval - 1) > p && (*(kval-1) == ' ' || *(kval-1) == '"'))
			kval--;
		*kval = '\0';
		kval = p;
		while ((kval + 1) < buf + len && (*(kval+1) == ' ' || *(kval+1) == '"'))
			kval++;
		
		strcpy(conf.BBSNAME, "ด๚ธี");
		
		printf("%s, %s\n", kname, kval);			
	}
	fclose(fp);
	
	printf("sizeof(conf) is %d\n", sizeof(struct conf));
}
